{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sigma-file-manager",
  "version": "0.1.0",
  "identifier": "com.sigma-file-manager.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "sigma-file-manager",
        "width": 1280,
        "height": 720,
        "minWidth": 500,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}